<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Iformation"
    android:orientation="vertical">
    <EditText
        android:id="@+id/StudentName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:hint="Enter Name"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_20sdp"/>
    <EditText
        android:id="@+id/StudentMail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:hint="Enter mail"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_20sdp"/>
    <EditText
        android:id="@+id/StudentID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:hint="Enter Id"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_20sdp"/>
    <EditText
        android:id="@+id/StudentPass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:hint="Enter Pass"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_20sdp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groups">
        <RadioButton
            android:id="@+id/group_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group One"/>
        <RadioButton
            android:id="@+id/group_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Two"/>
        <RadioButton
            android:id="@+id/group_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Three"/>
        <RadioButton
            android:id="@+id/group_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Four"/>

    </RadioGroup>

    <Button
          android:layout_width="match_parent"
          android:layout_height="@dimen/_30sdp"
          android:textColor="#000000"
          android:text="enter data"
          android:onClick="StudentData"
           />

</LinearLayout>